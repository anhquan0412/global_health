<header>
  <div class="hidden-xs">
    <nav class="navbar navbar-fixed-top navbar-default">
      <div class="container">
        <%= link_to image_tag("HGH.png"), root_path, id: "logo"  %>
          <% if logged_in? %>
            <div class="user_account">
            <ul>
              <li class="dropdown">
                <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
                  <%= current_user.first_name + " " + current_user.last_name %> 
                  <% if current_user.admin? %>
                    (admin)
                  <% end %>
                  <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "View Your Profile", user_path(current_user) %> </li>
                  <li><%= link_to "Edit Your Profile", edit_user_path(current_user) %></li>
                  <% if current_user.admin? %>
                    <li><%= link_to "View Pending Users", pending_users_path %></li>
                    <li><%= link_to "View Pending Projects", pending_projects_path  %></li>
                    <li><%= link_to "View All Specialties", specialties_path  %></li>
                    <li><%= link_to "View All Institutions", institutions_path %></li>
                  <% end %>
                  <li class = "divider"></li>
                  <li><%= link_to "Log out", logout_path %> </li>
                </ul>
              </li>
            </ul>
          </div>
          <div class="nav_item">
            <%= link_to "New Project", new_project_path, class: "btn btn-default btn-warning" %>
          </div>
          <% else %>
          <div class="user_account">
            <%= link_to "Log In", login_path, class: "btn btn-default btn-success" %>
          </div>
          <% end %>
      </div>
    </nav>
  </div>
  <div class="visible-xs">
    <nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas" role="navigation">
      <ul class="nav navmenu-nav">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
        <li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to "Projects", projects_path %></li>
        <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "Users", users_path %></li>
      </ul>
    </nav>
    <div class="navbar navbar-default navbar-fixed-top my-navbar">
      <button type="button" class="navbar-toggle mobile-menu-button" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("HGH.png"), root_path, id: "logo", class: "img-responsive" %>
    </div>
  </div>
</header>