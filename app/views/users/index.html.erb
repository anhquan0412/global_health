<%= render 'shared/page_title', title: "All Users" %> <!-- remember to use double quote here for string? -->




&nbsp&nbsp

<div class = "row">
 <div class = "col-md-4 col-md-offset-4 center">
   <%= will_paginate %>
 </div> 
</div>


<% @users.each do |user| %>
  <div class = "row well">
    <div class = "col-md-2">
        <% if user.picture? %>
            <%= image_tag(user.picture.url, size: "60x80", class: "gravatar") %>
        <% else %>
            <%= image_tag("user_pp.jpg", size: "60x80", class: "gravatar") %>
        <% end %>
    
    </div> 
    <div class = "col-md-4 center">
     <p>
       <%= link_to user.last_name + ', ' + user.first_name, user_path(user) %>
     </p>
     <p><%= user.institution %></p>
     <p><%= user.status.name %></p>
   </div>
   
   <div class = "col-md-2 pull-right">
     <p>
       <%= user.email %>
     </p>
   </div>

  </div>

<% end %>