<%= render 'shared/page_title', title: "All Pending Users" %> <!-- remember to use double quote here for string? -->




&nbsp&nbsp




<% @users.each do |user| %>
      <div class = "row well">
        <div class = "col-md-4">
            <% if user.picture? %>
                <%= image_tag(user.picture.url, size: "60x80", class: "gravatar") %>
            <% else %>
                <%= image_tag("user_pp.jpg", size: "60x80", class: "gravatar") %>
            <% end %>
        
        </div> 
        <div class = "col-md-6 center">
         <p>
           <%= link_to user.last_name + ', ' + user.first_name, user_path(user) %>
         </p>
         <p><%= user.status.name if !user.status.nil? %></p>
       </div>
   

      </div>
<% end %>