<%= render 'shared/page_title', title: "Search Projects" %>
<div class = "row">
  <div class="well col-md-8 col-md-offset-2">
    
    <%= search_form_for(
        @search,
        url: search_projects_path,
        html: {method: :post}
        ) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :name_cont, "Project Name" %>
            <%= f.search_field :name_cont %>
            
            <p><strong>Have At Least One Of These Locations</strong></p>
            <%= f.collection_select(:countries_id_in, Country.all, :id, :name, {}, {:multiple => true, :size => 8}) %>
          
          </div>
          
          <div class="col-md-6">
            <%= f.label :user_full_name_cont, "Organizer's Name" %>
            <%= f.search_field :user_full_name_cont %>  
            

            <p><strong>Have At Least One Of These Specialties</strong></p>
            <%= f.collection_select(:specialties_id_in, Specialty.all, :id, :name, {}, {:multiple => true, :size => 8}) %>
          </div>
        </div>
        <hr/>
        <%= f.submit(class: "btn btn-success") %>
        
    <% end %>

  </div>
</div>

<script type="text/javascript">
  $('select').select2();
</script>    

<%= render 'shared/show_projects', objects: @projects %>
